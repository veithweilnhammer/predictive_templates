	keywords = {Humans, Adult, Photic Stimulation, Photic Stimulation: methods, Female, Male, Young Adult, Depth Perception, Motion Perception, Motion Perception: physiology, Vision, Binocular, Vision, Binocular: physiology, Analysis of Variance, Depth Perception: physiology},
