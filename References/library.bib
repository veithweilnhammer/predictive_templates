	urldate = {2024-02-16},
	journal = {Schizophrenia Research},
	author = {Oorschot, Margreet and Lataster, Tineke and Thewissen, Viviane and Bentall, Richard and Delespaul, Philippe and Myin-Germeys, Inez},
	month = sep,
	year = {2012},
	keywords = {Hallucinations, Emotions, Daily life, Experience Sampling Method (ESM), Phenomenology},
	pages = {77--82},
}

