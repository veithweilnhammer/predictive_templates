	journal = {Psychiatry Research},
	author = {Hermans, Karlijn and van der Steen, Yori and Kasanova, Zuzana and van Winkel, Ruud and Reininghaus, Ulrich and Lataster, Tineke and Bechdolf, Andreas and Gimpel-Drees, Judith and Wagner, Michael and Myin-Germeys, Inez},
